{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-sm-3"></div>

    <div class="col-sm-6">
        <h1>{{ 'registration.accountCreation'|trans }}</h1>
    </div>
</div>

<br>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} class="form-horizontal" method="POST" class="fos_user_registration_register">
    {% if form_errors(form) %}
        <div data-alert class="alert-box alert round">
            {{ form_errors(form) }}
        </div>
    {% endif %}
    {{ form_widget(form._token) }}

    <div class="form-group {% if form_errors(form.email) %}has-error {% endif %}">
        {{ form_label(form.email, null,{ 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.email) %}
                <span class="help-inline">{{ form_errors(form.email) }}</span>
            {% endif %}
        </div>
    </div>
    <div class="form-group {% if form_errors(form.username) %}has-error {% endif %}">
        {{ form_label(form.username, null,{ 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6 warning">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.username) %}
                <span class="help-inline">{{ form_errors(form.username) }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group {% if form_errors(form.plainPassword.first) %}has-error {% endif %}">
        {{ form_label(form.plainPassword.first,null, { 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'}}) }}


        </div>
    </div>

    <div class="form-group {% if form_errors(form.plainPassword.first) %}has-error {% endif %}">
        {{ form_label(form.plainPassword.second, null,{ 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.plainPassword.first) %}
                <span class="help-inline">{{ form_errors(form.plainPassword.first) }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.presentation, null,{ 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.presentation, { 'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group {% if form_errors(form.avatarFile) %}has-error {% endif %}">
        {{ form_label(form.avatarFile, null,{ 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.avatarFile, { 'attr': {'class': 'btn btn-default'}}) }}
            {% if form_errors(form.avatarFile) %}
                <span class="help-inline">{{ form_errors(form.avatarFile) }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.dateNaissance, null,{ 'label_attr': {'class': 'control-label '}}) }}
        <div class="col-sm-6">
            <div class='input-group date {% if form_errors(form.dateNaissance) %}has-error {% endif %}' id='datetimepicker11'>
                {{ form_widget(form.dateNaissance, { 'attr': {'class': 'form-control'}}) }}
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>

            </div>
            {% if form_errors(form.dateNaissance) %}
                <span class="help-inline has-error">{{ form_errors(form.dateNaissance) }}</span>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3"></div>

        <div class="col-sm-6">
            <div class="text-right">
                <input class="btn btn-success " type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
        </div>
    </div>

    <div style="display: none">
        {{ form_rest(form) }}
    </div>
{{ form_end(form) }}