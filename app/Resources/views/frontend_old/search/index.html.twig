{% extends "base.html.twig" %}

{% from 'macros/misc.html.twig' import pagination %}

{% block headline %}
    {{ 'app.ui.results_of_your_query'|trans }}
{% endblock %}

{% block subtitle %}

{% endblock %}

{% block breadcrumb_content %}
    {{ parent() }}
{% endblock %}

{% block body -%}
    <div class="col-md-12">
        <div class="img-box-4 text-center jeu-list">
            <!-- Container -->
            <div class="container">
                <div class="row">
                    {% for resource in results %}
                    {% set type = types[loop.index0] is defined ? types[loop.index0] : null %}
                    {% if loop.index0 > 0 and loop.index0%4 == 0 %}
                </div>
                <div class="row">
                    {% endif %}

                    <div class="col-md-3 col-sm-6">
                        <div class="block-heading-two text-left">
                            <h3><span>{{ ('app.ui.' ~ type)|trans }}</span></h3>
                        </div>

                        {% include 'frontend/' ~ type ~ '/_singleBox.html.twig' ignore missing %}
                    </div>
                    {% endfor %}
                </div>
                <div class="clearfix"></div>

                {{ pagination(results) }}
            </div>
        </div>
    </div>
{% endblock %}