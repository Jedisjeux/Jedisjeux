{% set size = entity.listElements | length %}
{% set listJeu = "" %}

{% for index,listElement in entity.listElements %}
    {% if index == 0 %}
        {% set listJeu = listElement.jeu.libelle %}
    {% else %}
        {% set listJeu = listJeu  ~ ", " ~ listElement.jeu.libelle %}
    {% endif %}
{% endfor %}

<div class="col-md-3 col-sm-6">
    <!-- Image Box #3 Item -->
    <div class="img-box-3-item">
        <div class=" bg-purple img-collection-container" >
            <a href="{{ path('my-list' , {'id': entity.id} ) }}">
                <img class="img-collection" src="{{ entity.listElements[size-1].jeu.mainImage.webPath | imagine_filter('default') }}" alt="" class="'fa-picture-o'">
            </a>
        </div>
        <h4><a href="{{ path('my-list' , {'id': entity.id} ) }}">{{ entity.name }}</a></h4>
        <div class="bor bg-purple"></div>
        <p>{{ listJeu|length > 50 ? listJeu|slice(0, 50) ~ '...' : listJeu  }}</p>
    </div>
</div>