{% extends "layout/backend_index.html.twig" %}
{% from '::macros/misc.html.twig' import pagination %}
{% import 'macros/buttons.html.twig' as button %}
{% from 'macros/sorting.html.twig' import sorting %}
{% import 'macros/modal.html.twig' as modal %}

{% set sorting = app.request.get('sorting') %}

{% set icon = false %}
{% set currentOrder = null %}

{% if null == sorting %}
    {% set icon = true %}
    {% set currentOrder = 'asc' %}
{% endif %}

{% block headline %}
    Liste des Pays
{% endblock %}

{% block breadcrumb_content %}
    {{ parent() }}
    Pays
{% endblock %}


{% block new_entity_button %}
    <a class="btn btn-primary" href="{{ path('app_admin_country_create') }}">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Nouveau pays
    </a>
{% endblock new_entity_button %}

{% block list %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ sorting('app_admin_country_index', 'label.name'|trans, 'name', 'asc', icon, currentOrder) }}</th>
        </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country }}</td>
                <td class="text-right">
                    <ul class="list-inline text-nowrap">
                        <li>
                            {{ button.edit(path('app_admin_country_update', { 'id': country.id })) }}
                        </li>
                        <li>
                            {{ button.delete(path('app_admin_country_delete', { 'id': country.id })) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock list %}

{% block Pagination %}
    <div class="pagination-wrapper">
        <div class="pagination-bottom">
            {{ pagination(countries) }}
        </div>
    </div>
{% endblock %}