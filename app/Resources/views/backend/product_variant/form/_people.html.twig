<div class="tab-pane" id="people">
    <div class="form-group">
        {{ form_label(form.designers) }}
        <div class="col-sm-9">
            <select name="sylius_product_variant[designers][]" class="peopleAutocomplete form-control" multiple>
                {% for person in product_variant.designers %}
                    <option value="{{ person.id }}" selected="selected">{{ person }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.artists) }}
        <div class="col-sm-9">
            <select name="sylius_product_variant[artists][]" class="peopleAutocomplete form-control" multiple>
                {% for person in product_variant.artists %}
                    <option value="{{ person.id }}" selected="selected">{{ person }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.publishers) }}
        <div class="col-sm-9">
            <select name="sylius_product_variant[publishers][]" class="peopleAutocomplete form-control" multiple>
                {% for person in product_variant.publishers %}
                    <option value="{{ person.id }}" selected="selected">{{ person }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>