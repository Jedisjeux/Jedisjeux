{% extends "layout/backend_index.html.twig" %}
{% from '::macros/misc.html.twig' import pagination %}
{% import 'macros/buttons.html.twig' as button %}
{% from 'macros/sorting.html.twig' import sorting %}
{% import 'macros/modal.html.twig' as modal %}
{% from 'macros/images.html.twig' import image %}
{% from 'macros/users.html.twig' import avatar %}

{% set sorting = app.request.get('sorting') %}

{% set icon = false %}
{% set currentOrder = null %}

{% if null == sorting %}
    {% set icon = true %}
    {% set currentOrder = 'desc' %}
{% endif %}

{% block headline %}
    {{ 'label.posts'|trans }}
{% endblock %}

{% block breadcrumb_content %}
    {{ parent() }}
    {{ 'label.posts'|trans }}
{% endblock %}

{% block new_entity_button %}
{% endblock new_entity_button %}

{% block list %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ sorting('app_backend_post_index', 'label.username'|trans, 'user.username', 'asc') }}</th>
            <th>{{ sorting('app_backend_post_index', 'label.topic'|trans, 'topic.title', 'asc') }}</th>
            <th>{{ sorting('app_backend_post_index', 'label.created_at'|trans, 'createdAt', 'desc', icon, currentOrder) }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            {% set user = post.author.user %}
            <tr>
                <td>{{ image(avatar(user), 'thumbnail', user.customer, 'img-responsive img-round') }}</td>
                <td>{{ user }}</td>
                <td>{{ post.topic ? post.topic.title : post.parent.title }}</td>
                <td>{{ post.createdAt|localizeddate('medium', 'none') }}</td>
                <td class="text-right">
                    <ul class="list-inline text-nowrap">
                        {#<li>#}
                            {#{{ button.generic(path('app_backend_post_index', { 'criteria': {'post': post.id } }), 'label.posts', null, 'list') }}#}
                        {#</li>#}
                        <li>
                            {{ button.edit(path('app_backend_post_update', { 'id': post.id })) }}
                        </li>
                        <li>
                            {{ button.delete(path('app_backend_post_delete', { 'id': post.id })) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock list %}

{% block Pagination %}
    {{ pagination(posts) }}
{% endblock %}