{% extends "layout/backend_index.html.twig" %}
{% from '::macros/misc.html.twig' import pagination %}
{% import 'macros/buttons.html.twig' as button %}
{% from 'macros/sorting.html.twig' import sorting %}
{% import 'macros/modal.html.twig' as modal %}
{% from 'macros/status.html.twig' import dealerPriceStatus as status %}
{% from 'macros/images.html.twig' import image %}

{% set sorting = app.request.get('sorting') %}

{% set icon = false %}
{% set currentOrder = null %}

{% if null == sorting %}
    {% set icon = true %}
    {% set currentOrder = 'desc' %}
{% endif %}

{% block headline %}
    {{ 'label.contact_requests'|trans }}
{% endblock %}

{% block breadcrumb_content %}
    {{ parent() }}
    {{ 'label.contact_requests'|trans }}
{% endblock %}

{% block new_entity_button %}
{% endblock new_entity_button %}

{% block list %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ sorting('app_backend_contact_request_index', 'label.created_at'|trans, 'createdAt', 'asc', icon, currentOrder) }}</th>
            <th>{{ sorting('app_backend_contact_request_index', 'label.name'|trans, 'lastName', 'asc') }}</th>
            <th>{{ sorting('app_backend_contact_request_index', 'label.email'|trans, 'email', 'asc') }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for contact_request in contact_requests %}
            <tr>
                <td>{{ contact_request.createdAt|localizeddate('medium', 'none') }}</td>
                <td>{{ contact_request.fullName }}</td>
                <td>{{ contact_request.email }}</td>
                <td class="text-right">
                    <ul class="list-inline text-nowrap">
                        <li>
                            {{ button.show(path('app_backend_contact_request_show', { 'id': contact_request.id })) }}
                        </li>
                        <li>
                            {{ button.delete(path('app_backend_contact_request_delete', { 'id': contact_request.id })) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock list %}

{% block Pagination %}
    {{ pagination(contact_requests) }}
{% endblock %}