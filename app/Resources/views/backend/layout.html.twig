{% extends 'SyliusUiBundle:Layout:sidebar.html.twig' %}

{% block title %}Jedisjeux | {% endblock %}

{% block metatags %}
    {% include '_favicon.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {% include 'SyliusUiBundle::_stylesheets.html.twig' with {'path': 'assets/backend/compiled/css/style.css'} %}
{% endblock %}

{% block topbar %}
    <a class="icon item" id="sidebar-toggle">
        <i class="sidebar icon"></i>
    </a>
    <a href="{{ path('app_backend_dashboard') }}" target="_blank" class="item">{{ 'app.ui.view_website'|trans }}</a>
    {% include 'backend/layout/_search.html.twig' %}
    <div class="ui right floated simple dropdown item">
        <img class="ui avatar image" src="{{ asset('assets/backend/compiled/img/avatar.png') }}">
        <span>{{ app.user.username }}</span>
        <i class="dropdown icon"></i>
        <div class="menu">
            <a href="#" id="sylius-logout-button" class="item">
                <i class="sign out icon"></i>
                {{ 'app.ui.logout'|trans }}
            </a>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    <a class="item" href="#"><b>Jedisjeux</b></a>
    {{ knp_menu_render('app.admin.main', {'template': 'SyliusUiBundle:Menu:sidebar.html.twig'}) }}
{% endblock %}

{% block footer %}
    {{ 'sylius.ui.powered_by'|trans }} <a href="http://sylius.org" target="_blank">Sylius</a>.
{% endblock %}

{% block javascripts %}
    {% include 'backend/modal/_createFromBoardGameGeek.html.twig' %}

    {% include 'SyliusUiBundle::_javascripts.html.twig' with {'path': 'assets/backend/compiled/js/app.js'} %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}
