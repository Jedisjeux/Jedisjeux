{% extends "layout/backend_index.html.twig" %}
{% from 'macros/misc.html.twig' import pagination %}
{% import 'macros/buttons.html.twig' as button %}
{% from 'macros/sorting.html.twig' import sorting %}
{% import 'macros/modal.html.twig' as modal %}

{% set sorting = app.request.get('sorting') %}

{% set icon = false %}
{% set currentOrder = null %}

{% if null == sorting %}
    {% set icon = true %}
    {% set currentOrder = 'asc' %}
{% endif %}

{% block new_entity_button %}
    <a class="btn btn-primary" href="{{ path('admin_page_new') }}">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Nouveau page
    </a>
{% endblock new_entity_button %}

{% block page_title %}
    Liste des pages
{% endblock page_title %}

{% block list %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ sorting('admin_page_index', 'label.name'|trans, 'name', 'asc', icon, currentOrder) }}</th>
            <th>{{ sorting('admin_page_index', 'label.description'|trans, 'description', 'asc') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page }}</td>
                <td>{{ page.description|striptags }}</td>
                <td class="text-right">
                    <ul class="list-inline text-nowrap">
                        <li>
                            {{ button.show(path('page_show', { 'id': page.id, 'slug': page.slug })) }}
                        </li>
                        <li>
                            {{ button.edit(path('admin_page_edit', { 'id': page.id })) }}
                        </li>
                        <li>
                            {{ button.delete(path('admin_page_delete', { 'id': page.id })) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock list %}

{% block Pagination %}
    <div class="pagination-wrapper">
        <div class="pagination-bottom">
            {{ pagination(pages) }}
        </div>
    </div>
{% endblock %}