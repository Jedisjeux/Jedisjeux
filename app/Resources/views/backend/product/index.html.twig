{% extends 'layout/backend_index.html.twig' %}
{% from 'macros/misc.html.twig' import pagination %}
{% import 'macros/buttons.html.twig' as button %}
{% from 'macros/sorting.html.twig' import sorting %}
{% import 'macros/modal.html.twig' as modal %}
{% from 'macros/status.html.twig' import productStatus as status %}
{% from 'macros/images.html.twig' import image %}

{% set sorting = app.request.get('sorting') %}

{% set icon = false %}
{% set currentOrder = null %}

{% if null == sorting %}
    {% set icon = true %}
    {% set currentOrder = 'desc' %}
{% endif %}

{% block headline %}
    Liste des jeux
{% endblock %}

{% block breadcrumb_content %}
    {{ parent() }}
    Jeux
{% endblock %}

{% block new_entity_button %}
    <a class="btn btn-primary" href="{{ path('sylius_admin_product_create') }}">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Nouveau jeu
    </a>
{% endblock new_entity_button %}

{% block list %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ sorting('sylius_admin_product_index', 'label.name'|trans, 'name', 'asc') }}</th>
            <th>{{ sorting('sylius_admin_product_index', 'label.created_at'|trans, 'createdAt', icon, currentOrder) }}</th>
            <th>{{ sorting('sylius_admin_product_index', 'label.status'|trans, 'status') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>
                    {% if product.mainImage %}
                        {{ image(product.mainImage.webPath, 'thumbnail', product.name, 'img-responsive img-round') }}
                    {% endif %}
                </td>
                <td>{{ product }}</td>
                <td>{{ product.createdAt|localizeddate('long', 'none') }}</td>
                <td>{{ status(product) }}</td>
                <td class="text-right">
                    <ul class="list-inline">
                        <li>
                            {{ button.show(path('sylius_product_show', { 'slug': product.slug })) }}
                        </li>
                        <li>
                            {{ button.edit(path('sylius_admin_product_update', { 'id': product.id })) }}
                        </li>
                        <li>
                            {{ button.delete(path('sylius_admin_product_delete', { 'id': product.id })) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock list %}

{% block Pagination %}
    <div class="pagination-wrapper">
        <div class="pagination-bottom">
            {{ pagination(products) }}
        </div>
    </div>
{% endblock %}