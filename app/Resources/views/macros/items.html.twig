{% macro blogCommentItem(imagePath, imageLabel, imageFilter, imageClass, linkUrl, title, meta, body) %}
    {% from 'macros/images.html.twig' import image %}

    <div class="blog-comment-item">
        <div class="comment-author-image">
            {{ image(imagePath, imageFilter, imageLabel, imageClass, linkUrl) }}
        </div>
        <div class="comment-details">
            <!-- Name -->
            <h5><a href="{{ linkUrl }}">{{ title }}</a></h5>
            <div class="blog-meta">
                {{ meta|raw }}
            </div>
            <!-- Paragraph -->
            {{ body|raw }}
        </div>
    </div>
{% endmacro %}

{% macro blogAuthor(customer, body, createdAt) %}
    {% from 'macros/users.html.twig' import avatar %}

    <div class="blog-author">
        <!-- Author image -->
        <div class="blog-author-img">
            <a href="#"><!-- Item image -->
                <img src="{{ avatar(customer.user) | imagine_filter('thumbnail') }}"
                     alt="" class="img-responsive img-round"/></a>
        </div>
        <!-- Author details -->
        <div class="blog-author-content">
            <h5><a href="#">{{ customer.user.username }}
                    <small>
                        le {{ createdAt|localizeddate('full', 'none') }} {{ 'label.at'|trans|lower }} {{ createdAt|localizeddate('none', 'short') }}</small>
                </a></h5>
            {% if body %}
                {{ body|raw }}
            {% endif %}
        </div>
        <div class="clearfix"></div>
    </div>
{% endmacro %}
