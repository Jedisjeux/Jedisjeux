    {% set filter = filter|default('magazine_item') %}

    {% set meta = meta|default() %}

    {% if meta is empty %}
        {% set meta %}
            <i class="fa fa-calendar"></i> <!-- TODO publishedAt -->{{ game.createdAt|localizeddate('long', 'none') }}
            - <i class="fa fa-comments"></i> 5 Comments
        {% endset %}
    {% endif %}

    {% set body %}
        <p>Nemo enim ipsam voluptatem quia quia neque porro qui dolorem ipsum quia dolor sit amet
            consectetur. </p>
    {% endset %}

    {{ item.magazineItemOne(game.mainImage ? game.mainImage.webPath : 'assets/img/avatar_2x.png', game.name, filter, 'img-responsive', path('sylius_product_show', {'slug': game.slug}), game.name, body, meta) }}

{% endmacro %}