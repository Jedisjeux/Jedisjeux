{% macro magazineItemOne(article, imageFilter) %}
    {% import 'macros/items.html.twig' as item %}

    {% set articleDocument = article.document %}
    {% set imagineBlock = articleDocument.mainImage %}

    {% set meta %}
        <i class="fa fa-calendar"></i> {{ articleDocument.publishStartDate|localizeddate('long', 'none') }}
        - <i class="fa fa-comments"></i> {{ article.topic ? article.topic.postCount : 0 }} Comments
    {% endset %}
    {% set body %}{% endset %}

    {% set imageFilter = imageFilter|default('cmf_magazine_item_wide') %}

    {{ item.magazineItemOne(imagineBlock.image.id, imagineBlock.label, imageFilter, 'img-responsive', path('article_content_show', {'name': articleDocument.name}), articleDocument.title, body, meta) }}

{% endmacro %}

