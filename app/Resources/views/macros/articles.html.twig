{% macro magazineItemOne(article, imageFilter) %}
    {% import 'macros/items.html.twig' as item %}

    {% set meta %}
        <i class="fa fa-calendar"></i> {{ article.publishStartDate|localizeddate('medium', 'none') }}
        - <i class="fa fa-eye"></i> {{ article.viewCount }}
        - <i class="fa fa-comments"></i> {{ article.topic ? article.topic.postCount : 0 }}
    {% endset %}
    {% set body %}{% endset %}

    {% set imageFilter = imageFilter|default('magazine_item_wide') %}

    {{ item.magazineItemOne(article.mainImage ? article.mainImage.webPath : null, article.title, imageFilter, 'img-responsive', path('app_frontend_article_show', {'slug': article.slug}), article.title, body, meta) }}

{% endmacro %}

