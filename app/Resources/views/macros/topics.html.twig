{% macro getPath(topic) %}{% spaceless %}
    {% if topic.gamePlay %}
        {% set linkUrl = path('app_game_play_show', {'productSlug': topic.gamePlay.product.slug, 'id': topic.gamePlay.id }) %}
    {% elseif topic.article %}
        {% set linkUrl = path('article_content_show', {'name': topic.article.document.name }) %}
    {% else %}
        {% set linkUrl = path('app_post_index_by_topic', {'topicId': topic.id}) %}
    {% endif %}

    {{ linkUrl }}
{% endspaceless %}{% endmacro %}