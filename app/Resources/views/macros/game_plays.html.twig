{% macro magazineItemOne(game_play) %}
    {% import 'macros/items.html.twig' as item %}

    {% set game = game_play.product %}
    {% set topic = game_play.topic %}

    {% set meta %}
        <i class="fa fa-calendar"></i> {{ game_play.createdAt|localizeddate('medium', 'none') }}
        - <i class="fa fa-comments"></i> {% if topic %} {{ topic.posts|length }} {% endif %} Comments
    {% endset %}
    {% set body %}{% endset %}

    {{ item.magazineItemOne(game.mainImage ? game.mainImage.webPath : 'assets/img/avatar_2x.png', game.name, 'magazine_item', 'img-responsive', path('app_game_play_show', {'productSlug': game_play.product.slug, 'id': game_play.id}), game.name, body, meta) }}

{% endmacro %}