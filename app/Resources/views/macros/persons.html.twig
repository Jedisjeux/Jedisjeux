{% macro image(person, filter) %}
    {% set filter = filter|default('thumbnail') %}

    {% set imageSrc = asset('assets/frontend/img/product-placeholder.png'| imagine_filter(filter)) %}

    {% if (person.mainImage) %}
        {% set imageSrc = person.mainImage.webPath | imagine_filter(filter) %}
    {% endif %}

    {{ imageSrc }}
{% endmacro %}