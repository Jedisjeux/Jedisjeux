{% extends "::base.html.twig" %}

{% block container %}

    <div class="block-heading-two">
        <h3><span>Liste des produits</span></h3>
    </div>

    <ul class="list-inline">
        <li>
            <a class="btn btn-green" href="{{ path('compta_product_new') }}">
                <span class="glyphicon glyphicon-plus"></span>
                Cr√©er un produit
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.name'|trans }}</th>
            <th>{{ 'label.price'|trans }}</th>
            <th>{{ 'label.subscription_duration'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price|localizedcurrency('EUR') }}</td>
                <td>{{ product.subscriptionDuration }} {{ 'label.months'|trans }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-green" href="{{ path('compta_product_edit', { 'product': product.id }) }}">
                                <span class="glyphicon glyphicon-pencil"></span> Modifier
                            </a>
                        </li>
                        <li>
                            {{ form_start(deleteForms[product.id]) }}
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span> Supprimer
                            </button>
                            {{ form_end(deleteForms[product.id]) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock container %}