{% extends "::base.html.twig" %}
{% import 'macros/buttons.html.twig' as button %}

{% block container %}

    <div class="block-heading-two">
        <ul class="list-inline pull-right">
            <li>
                <a class="btn btn-primary" href="{{ path('compta_product_new') }}">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                    Cr√©er un produit
                </a>
            </li>
        </ul>
        <h3><span>Liste des produits</span></h3>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.name'|trans }}</th>
            <th>{{ 'label.price'|trans }}</th>
            <th>{{ 'label.subscription_duration'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price|localizedcurrency('EUR') }}</td>
                <td>{{ product.subscriptionDuration }} {{ 'label.months'|trans }}</td>
                <td class="text-right">
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-primary"
                               href="{{ path('compta_product_edit', { 'product': product.id }) }}">
                                <span class="glyphicon glyphicon-pencil"></span> Modifier
                            </a>
                        </li>
                        <li>
                            {% set disabled = product.billProducts|length > 0 ? true : false %}
                            {{ button.delete(path('compta_product_delete', {'id': product.id}), null, disabled) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock container %}