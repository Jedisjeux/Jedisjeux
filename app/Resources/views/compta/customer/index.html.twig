{% extends "::base.html.twig" %}
{% from 'JDJWebBundle:Macros:misc.html.twig' import pagination %}

{% block container %}

    <div class="block-heading-two">
        <ul class="list-inline pull-right">
            <li>
                <a class="btn btn-primary" href="{{ path('compta_customer_new') }}">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                    Créer un client
                </a>
            </li>
        </ul>
        <h3><span>Liste des clients</span></h3>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ 'label.company'|trans }}</th>
            <th>{{ 'label.email'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>
                    <a href="{{ path('compta_customer_show', { 'customer': customer.id }) }}">
                        {{ customer.id }}
                    </a>
                </td>
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.email }}</td>
                <td class="text-right">
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-default" href="{{ path('compta_customer_show', { 'customer': customer.id }) }}">
                                <span class="glyphicon glyphicon-book"></span> Détails
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="{{ path('compta_customer_edit', { 'customer': customer.id }) }}">
                                <span class="glyphicon glyphicon-pencil"></span> Modifier
                            </a>
                        </li>
                        <li>
                            {{ form_start(deleteForms[customer.id]) }}
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-trash"></span> Supprimer
                            </button>
                            {{ form_end(deleteForms[customer.id]) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% block Pagination %}
        <div class="pagination-wrapper">
            <div class="pagination-bottom">
                {{ pagination(customers) }}
            </div>
        </div>
    {% endblock %}

{% endblock container %}