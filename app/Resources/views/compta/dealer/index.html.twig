{% extends "layout/backend_index.html.twig" %}
{% from '::macros/misc.html.twig' import pagination %}
{% import 'macros/buttons.html.twig' as button %}
{% from 'macros/sorting.html.twig' import sorting %}
{% import 'macros/modal.html.twig' as modal %}

{% set sorting = app.request.get('sorting') %}

{% set icon = false %}
{% set currentOrder = null %}

{% if null == sorting %}
    {% set icon = true %}
    {% set currentOrder = 'asc' %}
{% endif %}

{% block new_entity_button %}
    <a class="btn btn-primary" href="{{ path('compta_dealer_create') }}">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Cr√©er un distributeur
    </a>
{% endblock new_entity_button %}

{% block page_title %}
    Liste des distributeurs
{% endblock page_title %}

{% block list %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>{{ sorting('compta_dealer', 'label.name'|trans, 'name', 'asc', icon, currentOrder) }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for dealer in dealers %}
            <tr>
                <td>{{ dealer.id }}</td>
                <td>{{ dealer }}</td>
                <td class="text-right">
                    <ul class="list-inline">
                        <li>
                            {{ button.edit(path('compta_dealer_update', { 'id': dealer.id })) }}
                        </li>
                        <li>
                            {{ button.delete(path('compta_dealer_delete', { 'id': dealer.id })) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock list %}

{% block Pagination %}
    <div class="pagination-wrapper">
        <div class="pagination-bottom">
            {{ pagination(dealers) }}
        </div>
    </div>
{% endblock %}