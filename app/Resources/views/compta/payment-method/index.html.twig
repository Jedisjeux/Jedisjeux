{% extends "::base.html.twig" %}

{% block container %}

    <div class="block-heading-two">
        <h3><span>Liste des méthodes de paiement</span></h3>
    </div>

    <ul class="list-inline">
        <li>
            <a class="btn btn-green" href="{{ path('compta_payment_method_new') }}">
                <span class="glyphicon glyphicon-plus"></span>
                Créer un méthode de paiement
            </a>
        </li>
    </ul>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.name'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for paymentMethod in paymentMethods %}
            <tr>
                <td>{{ payment_method.companyName }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-green" href="{{ path('compta_payment_method_edit', { 'paymentMethod': paymentMethod.id }) }}">
                                <span class="glyphicon glyphicon-pencil"></span> Modifier
                            </a>
                        </li>
                        <li>
                            {{ form_start(deleteForms[paymentMethod.id]) }}
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span> Supprimer
                            </button>
                            {{ form_end(deleteForms[payment_method.id]) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock container %}