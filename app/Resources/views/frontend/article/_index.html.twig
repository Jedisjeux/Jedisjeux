{% from 'macros/articles.html.twig' import magazineItemOne %}

<!-- Image Box #4 Starts -->
<div class="img-box-4 text-center jeu-list">
    <!-- Container -->
    <div class="container">
        <div class="row">
            {% for key, article in articles %}
            {% if key > 0 and key%3 == 0 %}
        </div>
        <div class="row">
            {% endif %}

            {% set imagineBlock = article.document.mainImage %}

            <div class="col-md-4 col-sm-6">
                <div class="img-box-4-item">
                    <div class="img-container">
                        <a href="img/gallery/small/2.jpg" class="lightbox"><img
                                    src="{{ imagineBlock.image.id|imagine_filter('cmf_full') }}" alt=""
                                    class="img-responsive"></a>

                    </div>
                    <div class="img-box-4-content">
                        <a href="#"><i class="fa fa-video-camera bg-lblue"></i></a>
                        <h4><a href="#">{{ article }}</a></h4>
                        <div class="bor bg-lblue"></div>
                        <p>Publi√© le {{ article.publishStartDate|localizeddate('medium', 'none') }}</p>

                        <div class="magazine-meta">
                            <i class="fa fa-eye"></i> {{ article.viewCount }}
                            - <i class="fa fa-comments"></i> {{ article.topic ? article.topic.postCount : 0 }}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<!-- Image Box #4 Ends -->