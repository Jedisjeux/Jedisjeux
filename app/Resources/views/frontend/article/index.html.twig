{% extends 'frontend/layout.html.twig' %}

{% block content %}
    {% include 'frontend/article/index/_breadcrumb.html.twig' %}

    <!-- main-container start -->
    <!-- ================ -->
    <section class="main-container">

        <div class="container">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-12">

                    <!-- page-title start -->
                    <!-- ================ -->
                    <h1 class="page-title">Articles</h1>
                    <div class="separator-2"></div>
                    <!-- page-title end -->

                    <!-- Articles start -->
                    <!-- ============================================================================== -->
                    <br>
                    <div class="row">
                        {% for article in articles.data %}
                        {% if loop.index0 > 0 and loop.index0%3 == 0 %}
                    </div>
                    <div class="row">
                        {% endif %}
                        <div class="col-sm-4">
                            {% include 'frontend/article/index/_imageBox.html.twig' %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- main end -->

            </div>
        </div>
    </section>
    <!-- main-container end -->

    {% include 'frontend/article/index/_footerTop.html.twig' %}
{% endblock content %}
