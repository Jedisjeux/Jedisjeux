{% extends "base.html.twig" %}

{% from 'macros/misc.html.twig' import pagination %}
{% from 'macros/articles.html.twig' import magazineItemOne %}

{% block body_class %}magazine{% endblock %}

{% block headline %}
    {{ 'title.articles'|trans }}
{% endblock headline %}

{% block container %}

    <div class="container">
        <div class="col-md-9">
            <div class="row">
                {% for key, article in articles %}
                {% if key > 0 and key%3 == 0 %}
            </div>
            <div class="row">
                {% endif %}
                <div class="col-md-4">
                    {{ magazineItemOne(article.document) }}
                </div>
                {% endfor %}
            </div>
            <div class="clearfix"></div>

            {{ pagination(articles) }}

        </div>
        <div class="col-md-3">
            {% include 'frontend/article/_sidebar.html.twig' %}
        </div>
    </div>

{% endblock %}