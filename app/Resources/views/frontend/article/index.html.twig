{% extends "base.html.twig" %}

{% from 'macros/misc.html.twig' import pagination %}

{% from 'macros/articles.html.twig' import magazineItemTwo %}

{% block headline %}
    {{ 'title.articles'|trans }}
{% endblock headline %}

{% block container %}

    <div class="container">
        <div class="col-md-9">
            {% for article in articles %}
                {{ magazineItemTwo(article.document) }}
                <div class="clearfix"></div>
            {% endfor %}

            {{ pagination(articles) }}

        </div>
        <div class="col-md-3">
            {% include 'frontend/article/_sidebar.html.twig' %}
        </div>
    </div>

{% endblock %}