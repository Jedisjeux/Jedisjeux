{% import 'macro/image.html.twig' as images %}

<div class="image-box style-2 mb-20 shadow-2 bordered light-gray-bg text-center">
    <div class="overlay-container">
        {% if person.mainImage is not null %}
            {{ images.render(person.mainImage.webPath, 'full', person) }}
        {% endif %}
        <div class="overlay-to-top">
            <p class="small margin-clear"><em>App development <br> Lorem ipsum dolor sit</em></p>
        </div>
    </div>
    <div class="body">
        <h3>{{ person }}</h3>
        <div class="separator"></div>
        <p>
            {% if person.productCountAsDesigner > 0 %}
                Auteur de {{ person.productCountAsDesigner }} jeux<br>
            {% endif %}
            {% if person.productCountAsArtist > 0 %}
                Illustrateur de {{ person.productCountAsArtist }} jeux<br>
            {% endif %}
            {% if person.productCountAsPublisher > 0 %}
                Ã‰diteur de {{ person.productCountAsPublisher }} jeux<br>
            {% endif %}
        </p>
        <a href="person-item.html" class="btn btn-default-transparent btn-animation btn-animation--slide-horizontal margin-clear">Read More<i class="fa fa-arrow-right pl-10"></i></a>
