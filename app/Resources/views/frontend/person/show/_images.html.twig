{% import 'macro/image.html.twig' as images %}

<div class="slick-carousel content-slider-with-thumbs mb-20">
    {% for image in person.images %}
        <div class="overlay-container overlay-visible">
            {{ images.render(image.webPath, 'default', person) }}
            <a href="{{ image.webPath | imagine_filter('default') }}" class="slick-carousel--popup-img overlay-link" title="image title"><i class="fa fa-plus"></i></a>
        </div>
    {% endfor %}
</div>
<div class="content-slider-thumbs-container">
    <div class="slick-carousel content-slider-thumbs">
        {% for image in person.images %}
            <div class="slick-nav-thumb">
                {{ images.render(image.webPath, 'magazine_item', person) }}
            </div>
        {% endfor %}
    </div>
</div>
