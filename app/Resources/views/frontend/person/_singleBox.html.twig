{% from 'macros/persons.html.twig' import image %}

{% set person = person is defined ? person : resource %}

{% set personHref = path('app_frontend_person_show', { 'slug': person.slug }) %}

<!-- Image Box #3 Item -->
<div class="img-box-4-item">
    <div class="img-container">
        <a href="{{ personHref }}">
            <img src="{{ image(person, 'image_box_4') }}" alt="" class="center-block img-responsive">
        </a>
    </div>
    <div class="img-box-4-content">
        <h4><a href="{{ personHref }}">{{ person }}</a></h4>
        <div class="bor bg-lblue"></div>
        <ul class="list-unstyled">
            {% if person.designerProducts|length > 0 %}
                <li>Auteur de {{ person.designerProducts|length }}
                    jeu{% if person.designerProducts|length > 1 %}x{% endif %}</li>
            {% endif %}
            {% if person.artistProducts|length > 0 %}
                <li>Illustrateur de {{ person.artistProducts|length }}
                    jeu{% if person.artistProducts|length > 1 %}x{% endif %}</li>
            {% endif %}
            {% if person.publisherProducts|length > 0 %}
                <li>Ã‰diteur de {{ person.publisherProducts|length }}
                    jeu{% if person.publisherProducts|length > 1 %}x{% endif %}</li>
            {% endif %}
        </ul>
    </div>
</div>


