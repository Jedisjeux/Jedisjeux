{% from 'macros/persons.html.twig' import image %}

{% set personHref = path('app_frontend_person_show', { 'slug': person.slug }) %}

<!-- Image Box #3 Item -->
<div class="img-box-4-item">
    <a href="{{ personHref }}">
        <img src="{{ image(person, 'small_height_fixed') }}" alt="" class="center-block img-responsive">
    </a>
    <h4><a href="{{ personHref }}">{{ person }}</a></h4>
    <div class="bor bg-lblue"></div>
    <ul class="list-unstyled">
        {% if person.productCountAsDesigner > 0 %}
            <li>Auteur de {{ person.productCountAsDesigner }}
                jeu{% if person.productCountAsDesigner > 1 %}x{% endif %}</li>
        {% endif %}
        {% if person.productCountAsArtist > 0 %}
            <li>Illustrateur de {{ person.productCountAsArtist }}
                jeu{% if person.productCountAsArtist > 1 %}x{% endif %}</li>
        {% endif %}
