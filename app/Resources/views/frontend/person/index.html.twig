{% extends 'frontend/layout.html.twig' %}

{% from 'macro/pagination.html.twig' import simple as pagination %}

{% block content %}
    {% include 'frontend/person/index/_banner.html.twig' %}

    <!-- main-container start -->
    <!-- ================ -->
    <section class="main-container">
        <div class="container">
            <div class="row">
                <!-- main start -->
                <!-- ================ -->
                <div id="people-list" class="main col-12">
                    <div class="row grid-space-10">
                        {% for person in people.data %}
                            <div class="col-md-6 col-lg-3">
                                {% include 'frontend/person/index/_imageBox.html.twig' %}
                            </div>
                        {% endfor %}
                    </div>

                    <!-- pagination start -->
                    {{ pagination(people.data) }}
                    <!-- pagination end -->

                </div>
                <!-- main end -->
            </div>
        </div>
    </section>
    <!-- main-container end -->

    {% include 'frontend/person/index/_footerTop.html.twig' %}
{% endblock content %}
