{% import 'macro/image.html.twig' as images %}

<!-- header-top start -->
<!-- classes:  -->
<!-- "dark": dark version of header top e.g. class="header-top dark" -->
<!-- "colored": colored version of header top e.g. class="header-top colored" -->
<!-- ================ -->
<div class="header-top dark">
    <div class="container">
        <div class="row">
            <div class="col-3 col-sm-6 col-lg-9">
                <!-- header-top-first start -->
                <!-- ================ -->
                <div class="header-top-first clearfix">
                    <ul class="social-links circle small clearfix hidden-sm-down">
                        <li class="twitter"><a href="https://twitter.com/jedisjeux"><i class="fa fa-twitter"></i></a></li>
                        <li class="youtube"><a href="https://www.youtube.com/user/jedisjeux"><i class="fa fa-youtube-play"></i></a></li>
                        <li class="facebook"><a href="https://www.facebook.com/jedisjeux"><i class="fa fa-facebook"></i></a></li>
                        <li class="github"><a href="https://github.com/Jedisjeux/Jedisjeux"><i class="fa fa-github"></i></a></li>
                    </ul>
                    <div class="social-links hidden-md-up circle small">
                        <div class="btn-group dropdown">
                            <button id="header-top-drop-1" type="button" class="btn dropdown-toggle dropdown-toggle--no-caret" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-share-alt"></i></button>
                            <ul class="dropdown-menu dropdown-animation" aria-labelledby="header-top-drop-1">
                                <li class="twitter"><a href="https://twitter.com/jedisjeux"><i class="fa fa-twitter"></i></a></li>
                                <li class="youtube"><a href="https://www.youtube.com/user/jedisjeux"><i class="fa fa-youtube-play"></i></a></li>
                                <li class="facebook"><a href="https://www.facebook.com/jedisjeux"><i class="fa fa-facebook"></i></a></li>
                                <li class="github"><a href="https://github.com/Jedisjeux/Jedisjeux"><i class="fa fa-github"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <ul class="list-inline hidden-md-down">
                        <li class="list-inline-item"><i class="fa fa-envelope-o pr-1 pl-2"></i> jedisjeux@jedisjeux.net</li>
                    </ul>
                </div>
                <!-- header-top-first end -->
            </div>
            <div class="col-9 col-sm-6 col-lg-3">

                <!-- header-top-second start -->
                <!-- ================ -->
                <div id="header-top-second"  class="clearfix">

                    <!-- header top dropdowns start -->
                    <!-- ================ -->
                    <div class="header-top-dropdown text-right">
                        <div class="btn-group">
                            <a href="{{ path('app_frontend_register') }}" class="btn btn-default btn-sm"><i class="fa fa-user pr-2"></i> Sign Up</a>
                        </div>
                        {% if app.user is null %}
                            <div class="btn-group">
                                <button id="header-top-drop-2" type="button" class="btn dropdown-toggle btn-default btn-sm dropdown-toggle--no-caret" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-lock pr-2"></i> Login</button>
                                <ul class="dropdown-menu dropdown-menu-right dropdown-animation" aria-labelledby="header-top-drop-2">
                                    <li>
                                        {% include 'frontend/header/top/_loginForm.html.twig' %}
                                    </li>
                                </ul>
                            </div>
                        {% else %}

                            <div class="btn-group">
                                {% set customer = app.user.customer %}
                                {% set avatarPath = customer.avatar is not null ? customer.avatar.webPath : '/assets/frontend/templates/images/avatar-placeholder.png' %}
                                <a href="{{ path('sylius_frontend_account_dashboard') }}" class="btn btn-default btn-sm">
                                    {#{{ images.render(avatarPath, 'thumbnail', customer, 'avatar rounded-circle') }}#}

                                    Mon compte
                                </a>
                            </div>
                        {% endif %}
                    </div>
                    <!--  header top dropdowns end -->
                </div>
                <!-- header-top-second end -->
            </div>
        </div>
    </div>
</div>
<!-- header-top end -->
