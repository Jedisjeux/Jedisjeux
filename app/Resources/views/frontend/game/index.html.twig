{% extends 'base.html.twig' %}
{% from 'macros/misc.html.twig' import pagination %}
{% from 'macros/sorting.html.twig' import sorting %}

{% block headline %}
    Jeux
{% endblock %}

{% block breadcrumb_content %}
    {{ parent() }}
    Jeux /
{% endblock %}

{% block body -%}

    <div class="pull-right sorting">
        {% set sorting = app.request.get('sorting') %}

        {% set icon = false %}
        {% set currentOrder = null %}

        {% if null == sorting %}
            {% set icon = true %}
            {% set currentOrder = 'desc' %}
        {% endif %}

        Trier par {{ sorting('app_game_index', 'label.created_at'|trans, 'createdAt', 'desc', icon, currentOrder) }},
        {{ sorting('app_game_index', 'label.name'|trans, 'name', 'asc') }}
    </div>

    {% include "jeu/index/list-4.html.twig" with {'jeux': games} only %}

    {% block Pagination %}
        <div class="pagination-wrapper">
            <div class="pagination-bottom">
                {{ pagination(games) }}
            </div>
        </div>
    {% endblock %}

{% endblock %}