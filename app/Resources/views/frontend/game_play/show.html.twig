{% extends "::base.html.twig" %}

{% from 'macros/posts.html.twig' import blogCommentItem %}

{% set topic = game_play.topic %}

{% block headline %}
    Partie de {{ game_play.product }}
{% endblock %}

{% block breadcrumb_content %}
    <a href="{{ path('sylius_product_index') }}">Jeux</a>
    / {{ game_play.product }}
{% endblock %}

{% block container %}

    <div class="container">
        <div class="col-md-12">
            <div class="blog-meta">
                <!-- Date -->
                <a href="#"><i class="fa fa-calendar"></i> &nbsp;
                    le {{ game_play.createdAt|localizeddate('full', 'none') }}</a>
                &nbsp;
                <!-- Author -->
                <a href="#"><i class="fa fa-user"></i> &nbsp; {{ game_play.author.user }}</a>
            </div>
        </div>

    </div>
    <div class="col-md-8">
        {% include "frontend/game/show/header.html.twig" with {'jeu': game_play.product} only %}

        {% if topic %}
            <div class="block-heading-two">
                <h3><span>Commentaires</span>
                    <small>({{ topic.posts|length }})</small>
                </h3>
            </div>

            <div class="blog-comments">
                {% for post in topic.posts %}
                {{ blogCommentItem(post) }}
            {% endfor %}
            </div>
        {% endif %}

    </div>

    <div class="col-md-4">
        {% include "frontend/game/show/sidebar.html.twig" with {'jeu': game_play.product} only %}
    </div>

{% endblock container %}