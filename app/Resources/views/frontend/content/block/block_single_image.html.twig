{% from 'macros/images.html.twig' import image %}

{% set imageBlock %}
    {% if block.hasChildren %}
        {% set imagineBlock = block.children.first %}
        <div class="text-center">
            <!-- Image -->
            <!-- Image Box #4 Item -->
            <div class="img-box-4-item">
                <!-- Image -->
                {% if imagineBlock.image is not null %}
                    {{ image(imagineBlock.image.id, 'cmf_block', imagineBlock.label, 'img-responsive', imagineBlock.linkUrl) }}
                {% else %}
                    <img class="img-responsive"
                         src="https://placeholdit.imgix.net/~text?txtsize=150&txt=Image...&w=1600&h=900"
                         alt="{{ imagineBlock.label }}"/>
                {% endif %}

                <!-- Image Box #4 Content -->
                <div class="img-box-4-content">
                    <!-- Paragraph -->
                    <p>{{ imagineBlock.label }}</p>
                </div>
            </div>
        </div>
    {% endif %}
{% endset %}

{% set bodyBlock %}
    <!-- Image Box #5 Content -->
    <div class="img-box-5-content">
        <h4><a href="#">{{ block.title }}</a></h4>
        <div class="bor bg-color"></div>
        {{ block.body|raw }}
    </div>
{% endset %}

<div class="{{ block.class }}">
    {% if 'left' == block.imagePosition %}
        <div class="col-sm-5 col-md-5 pull-left no-padding-left">
            {{ imageBlock }}
        </div>
        <h4><a href="#">{{ block.title }}</a></h4>
        <div class="block-body">
            {{ block.body|raw }}
        </div>
    {% elseif 'right' == block.imagePosition %}
        <div class="col-sm-5 col-md-5 pull-right no-padding-right">
            {{ imageBlock }}
        </div>
        <h4><a href="#">{{ block.title }}</a></h4>
        <div class="block-body">
            {{ block.body|raw }}
        </div>
    {% else %}
        <h4><a href="#">{{ block.title }}</a></h4>
        <div class="bor bg-color"></div>
        {{ imageBlock }}
        <div class="block-body">
            {{ block.body|raw }}
        </div>
    {% endif %}
</div>
<div class="clearfix"></div>
