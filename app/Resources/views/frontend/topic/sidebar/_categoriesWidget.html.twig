<!-- Categories Widget -->
<div class="s-widget">
    <!-- Heading -->
    <h5><i class="fa fa-folder color"></i>&nbsp; {{ 'label.categories'|trans }}</h5>
    <!-- Widgets Content -->
    <div class="widget-content categories">
        <ul class="list-6">
            {% for thisTaxon in taxons %}
                {% set currentTaxon = taxon is defined and thisTaxon == taxon ? true : false %}
                <li>
                    <a href="{{ path('app_topic_index_by_taxon', { 'permalink': thisTaxon.slug }) }}">
                        {% if currentTaxon %}<strong>{% endif %}{{ thisTaxon }}{% if currentTaxon %}</strong>{% endif %}
                        <span class="color">({{ thisTaxon.topicCount }})</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>