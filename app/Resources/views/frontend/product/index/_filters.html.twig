{% import '@SyliusUi/Macro/sorting.html.twig' as sorting %}

{% set definition = resources.definition %}
{% set path = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
{% set criteria = app.request.get('criteria') %}
{% set sorting = app.request.get('sorting') %}

<!-- section start -->
<!-- ================ -->
<div class="dark-translucent-bg section">
    <div class="container-fluid">
        <!-- filters start -->
        <div class="sorting-filters text-center mb-20 d-flex justify-content-center">
            <form class="form-inline" method="get">
                <div class="form-group">
                    <label>Tri√© par</label>
                    <select class="form-control">
                        <option selected="selected">Date</option>
                        <option>Note</option>
                    </select>
                </div>
                <div class="form-group ml-1">
                    <label>Order</label>
                    <select class="form-control">
                        <option selected="selected">Asc</option>
                        <option>Desc</option>
                    </select>
                </div>
                {% for filter in definition.filters %}
                    {{ sylius_grid_render_filter(resources, filter) }}
                {% endfor %}
                <div class="form-group ml-1">
                    <button type="submit" class="btn btn-default">
                        <span class="fa fa-search"></span>
                        {{ 'sylius.ui.search'|trans }}</button>
                </div>
            </form>
        </div>
        <!-- filters end -->
    </div>
</div>
<!-- section end -->
