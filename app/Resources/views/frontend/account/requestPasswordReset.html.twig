{% extends 'frontend/layout.html.twig' %}

{% block bodyClass %}security resetting{% endblock %}

{% set pageTitle = 'sylius.ui.forgot_password'|trans %}

{% block headline %}
    {{ pageTitle }}
{% endblock %}

{% block content %}
    {% include 'frontend/account/request_password_reset/_breadcrumb.html.twig' %}

    <!-- main-container start -->
    <!-- ================ -->
    <div class="main-container dark-translucent-bg" style="background-image:url('/assets/frontend/images/shop-banner-2.jpg');">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <!-- main start -->
                    <!-- ================ -->
                    <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
                        <div class="form-block p-30 light-gray-bg border-clear">
                            <h2 class="title">{{ pageTitle }}</h2>

                            {{ form_errors(form) }}

                            <form action="{{ path('sylius_user_request_password_reset_token') }}?" method="post" class="form-horizontal">
                                {{ form_errors(form) }}
                                {{ form_row(form.email, {'label': 'sylius.ui.email'}) }}

                                {{ form_rest(form) }}

                                <div class="form-group row">
                                    <div class="ml-md-auto col-md-9">
                                        <button type="submit" class="btn btn-group btn-default btn-animated">{{ 'sylius.ui.reset_button'|trans }} <i class="fa fa-check"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- main end -->
                </div>
            </div>
        </div>
    </div>
    <!-- main-container end -->

    {% include 'frontend/account/request_password_reset/_footerTop.html.twig' %}
{% endblock content %}
