{% extends 'base.html.twig' %}

{% block bodyClass %}security resetting{% endblock %}

{% set pageTitle = 'sylius.ui.forgot_password'|trans %}

{% block headline %}
    {{ pageTitle }}
{% endblock %}

{% block container %}
    <form class="form-horizontal"
          action="{{ path('sylius_user_request_password_reset_token') }}"
          method="POST">

        {{ form_errors(form) }}
        {{ form_row(form.email, {'label': 'sylius.ui.email'}) }}

        {{ form_rest(form) }}

        <div class="pull-right">
            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" id="_submit"
                    name="_submit">{{ 'label.validate'|trans }}</button>
        </div>
    </form>
{% endblock %}
