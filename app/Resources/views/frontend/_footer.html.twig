{% import 'macro/social_links.html.twig' as social_links %}

<!-- footer start (Add "dark" class to #footer in order to enable dark footer) -->
<!-- ================ -->
<footer id="footer" class="clearfix ">

    <!-- .footer start -->
    <!-- ================ -->
    <div class="footer">
        <div class="container">
            <div class="footer-inner">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="footer-content">
                            <div class="logo-footer"><span id="logo-footer" class="logo-font text-default">Jedisjeux</span></div>
                            {{ sonata_block_render({'name': '/cms/content/about'}, {'template': 'frontend/content/block/block_content.html.twig'}) }}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="footer-content">
                            <h2 class="title">{{ 'app.ui.latest_articles'|trans }}</h2>
                            <div class="separator-2"></div>
                            {{ render(url('app_partial_article_index', {
                                'template': 'frontend/article/_simpleList.html.twig',
                                'paginate': 4,
                                'sorting': {
                                    'publishStartDate': 'desc'
                                }} ))
                            }}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="footer-content">
                            <h2 class="title">{{ 'app.ui.game_play_images'|trans }}</h2>
                            <div class="separator-2"></div>
                            {{ render(url('app_frontend_partial_game_play_image_index', {
                                'template': 'frontend/game_play_image/_simpleList.html.twig',
                                'paginate': 6,
                                'sorting': {
                                    'createdAt': 'desc'
                                }} ))
                            }}
                            <div class="text-right space-top">
                                <a href="{{ path('app_frontend_game_play_image_index') }}" class="link-dark"><i class="fa fa-plus-circle pl-1 pr-1"></i>More</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="footer-content">
                            <h2 class="title">{{ 'sylius.ui.contact_us'|trans }}</h2>
                            <div class="separator-2"></div>
                            <ul class="social-links circle animated-effect-1">
                                {{ social_links.list() }}
                            </ul>
                            <div class="separator-2"></div>
                            <ul class="list-icons">
                                <li><i class="fa fa-map-marker pr-2 text-default"></i> {{ sonata_block_render({'name': '/cms/content/head-office'}, {'template': 'frontend/content/block/simple.html.twig'}) }}</li>
                                <li><a href="{{ path('app_frontend_contact_request_create') }}"><i class="fa fa-envelope-o pr-2"></i>{{ 'sylius.ui.contact_us'|trans }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- .footer end -->

    <!-- .subfooter start -->
    <!-- ================ -->
    <div class="subfooter">
        <div class="container">
            <div class="subfooter-inner">
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-center">Copyright Â© 2018 Jedisjeux. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- .subfooter end -->

</footer>
