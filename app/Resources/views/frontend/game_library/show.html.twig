{% extends 'base.html.twig' %}
{% from 'macros/misc.html.twig' import pagination %}

{% block headline %}
    Ludoth√®que de {{ customer.user.username }}
{% endblock %}

{% block container %}

    <div class="container">

        <div class="col-md-12">
            <div class="img-box-4 text-center jeu-list">

                <div class="row">
                    {% for key, customer_list_element in customer_list_elements %}
                    {% if key != 0 and key%4 == 0 %}
                </div>

                <div class="row">

                    {% endif %}

                    {% set product = customer_list_element.element %}
                    {% set faImg = 'fa-picture-o' %}

                    {% if key%4 == 0 %}
                        {% set bg = 'bg-red' %}
                        {% set faImg = 'fa-star' %}
                    {% elseif (key+1)%4 == 0 %}
                        {% set bg = 'bg-lblue' %}
                        {% set faImg = 'fa-child' %}
                    {% elseif (key+2)%4 == 0 %}
                        {% set bg = 'bg-green' %}
                        {% set faImg = 'fa-user' %}
                    {% elseif (key+3)%4 == 0 %}
                        {% set bg = 'bg-purple' %}
                        {% set faImg = 'fa-user-plus' %}
                    {% endif %}



                    <div class="col-md-3 col-sm-6">
                        {% include "frontend/game/index/list-element.html.twig" %}
                    </div>

                    {% endfor %}
                </div>
            </div>

            {{ pagination(customer_list_elements) }}
        </div>

    </div>

{% endblock %}