<!-- Sidebar -->
<div class="sidebar">

    {% for taxonomy in taxonomies %}
        {% set taxons = taxonomy.taxons %}
        <!-- Categories Widget -->
        <div class="s-widget">
            <!-- Heading -->
            <h5><i class="fa fa-folder color"></i>&nbsp; {{ taxonomy.name }}</h5>
            <!-- Widgets Content -->
            <div class="widget-content categories">
                <ul class="list-6">
                    {% for key, thisTaxon in taxons %}
                        {% if key < 5 %}
                            {% set currentTaxon = taxon is defined and thisTaxon == taxon ? true : false %}
                            <li>
                                <a href="{{ path('app_game_library_show_by_taxon', { 'customerId': app.request.get('customerId'), 'permalink': thisTaxon.permalink }) }}">
                                    {% if currentTaxon %}
                                    <strong>{% endif %}{{ thisTaxon }}{% if currentTaxon %}</strong>{% endif %}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endfor %}


