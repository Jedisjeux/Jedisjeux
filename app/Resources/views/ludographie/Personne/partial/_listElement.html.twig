{% from 'macros/persons.html.twig' import image %}

{% set personHref = path('personne_show', { 'id': person.id, 'slug': person.slug }) %}

<!-- Image Box #3 Item -->
<div class="img-box-7-item">
    <a href="{{ personHref }}">
        <img src="{{ image(person, 'thumbnail_XL') }}" alt="" class="img-round img-responsive">
    </a>
    <h4><a href="{{ personHref }}">{{ person }}</a></h4>
    <div class="bor bg-lblue"></div>
    <ul class="list-unstyled">
        {% if person.country %}
            <li>{{ person.country }}</li>
        {% endif %}
        {% if person.auteurJeux|length > 0 %}
            <li>Auteur de {{ person.auteurJeux|length }} jeu{% if person.auteurJeux|length > 1 %}x{% endif %}</li>
        {% endif %}
        {% if person.illustrateurJeux|length > 0 %}
            <li>Illustrateur de {{ person.illustrateurJeux|length }} jeu{% if person.illustrateurJeux|length > 1 %}x{% endif %}</li>
        {% endif %}
        {% if person.editeurJeux|length > 0 %}
            <li>Ã‰diteur de {{ person.editeurJeux|length }} jeu{% if person.editeurJeux|length > 1 %}x{% endif %}</li>
        {% endif %}
    </ul>
</div>
