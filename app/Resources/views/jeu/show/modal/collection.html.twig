{% if app.user %}
<div class="bs-example">

    <!-- Modal HTML -->
    <div id="collectionModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h1 class="modal-title">J'ajoute "<strong>{{ jeu.libelle }}</strong>"</h1>
                </div>
                <div class="modal-body">
                    {% if collectionList %}
                        <div class="add-collection-choice">
                            <label><input id="radio-existing-list" type="radio" name="choose-list" title="dans une de mes listes" checked="checked"> dans une de mes
                                listes</label>
                        </div>
                        <div class="add-collection-choice">
                            <label><input id="radio-new-list" type="radio" name="choose-list" title="dans une nouvelle liste"> dans une nouvelle liste</label>
                        </div>


                        <div id="add-in-list">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="input-list-name" class="col-sm-2 control-label">Nom de ma liste</label>

                                    <div class="col-sm-10" >

                                        <select id="input-existing-collection" multiple="multiple" >
                                            {% for collection in collectionList %}
                                                <option value="{{ collection.id }}">{{ collection.name }}</option>
                                            {% endfor %}
                                        </select>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">

                                        <div class="col-sm-offset-2 col-sm-10">
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                                <button id="add-game-collection" data-jeu-id="{{ jeu.id }}"
                                                        type="button" class="btn btn-primary"
                                                        >Ajouter
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>


                        </div>


                    {% endif %}

                    <div id="create-list">

                        <form class="form-horizontal">
                            <div id="form-group-name-list" class="form-group">
                                <label for="input-list-name" class="col-sm-2 control-label">Nom de ma liste</label>

                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input-list-name"
                                           placeholder="Ma super liste">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input-list-description" class="col-sm-2 control-label">Description</label>

                                <div class="col-sm-10">
                                    <textarea class="form-control" id="input-list-description" rows="3"></textarea>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                        <button id="add-list-collection" data-jeu-id="{{ jeu.id }}"
                                                data-uid="{{ app.user.id }}" type="button" class="btn btn-primary"
                                                >Ajouter
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
{% endif %}