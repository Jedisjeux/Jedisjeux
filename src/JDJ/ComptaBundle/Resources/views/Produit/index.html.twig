{% extends "JDJWebBundle::layout.html.twig" %}

{% block body -%}
    <h1>Liste des produits</h1>

    <ul>
        <li>
            <a class="button" href="{{ path('produit_new') }}">
                Cr√©er un produit
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('produit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.libelle }}</td>
                <td class="small-4">
                <ul class="inline-list">
                    <li>
                        <a class="small button" href="{{ path('produit_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                    <li>
                        <a class="small button" href="{{ path('produit_delete', { 'id': entity.id }) }}">Supprimer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
