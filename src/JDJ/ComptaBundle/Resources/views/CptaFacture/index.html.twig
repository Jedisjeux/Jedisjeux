{% extends "JDJWebBundle::layout.html.twig" %}

{% block body -%}
    <h1>CptaFacture list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Datecreation</th>
                <th>Datepaiement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cptafacture_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.montant }}</td>
                <td>{% if entity.datecreation %}{{ entity.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datepaiement %}{{ entity.datepaiement|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cptafacture_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cptafacture_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cptafacture_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
