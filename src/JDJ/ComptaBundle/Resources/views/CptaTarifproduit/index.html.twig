{% extends "JDJWebBundle::layout.html.twig" %}

{% block body -%}
    <h1>Liste des tarifs</h1>

    <ul>
        <li>
            <a class="button" href="{{ path('cptatarifproduit_new') }}">
                Cr√©er un tarif
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cptatarifproduit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.datedebut %}{{ entity.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datefin %}{{ entity.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.prix }}</td>
                <td class="small-3">
                <ul class="inline-list">
                    <li>
                        <a class="small button" href="{{ path('cptatarifproduit_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="small button" href="{{ path('cptatarifproduit_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
