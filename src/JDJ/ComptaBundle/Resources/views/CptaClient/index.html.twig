{% extends "JDJWebBundle::layout.html.twig" %}

{% block body -%}
    <h1>Liste des clients</h1>

    <ul>
        <li>
            <a class="button add" href="{{ path('cptaclient_new') }}">
                Cr√©er un nouveau client
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Societe</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cptaclient_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.societe }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cptaclient_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cptaclient_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
