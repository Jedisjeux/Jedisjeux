{% extends "JDJWebBundle::layout.html.twig" %}
{% block body -%}
    <h1>Liste des utilisateurs</h1>

    <ul>
        <li>
            <a class="button add" href="{{ path('espace-personnel_new') }}">
                Ajouter un nouvel utilisateur
            </a>
        </li>
    </ul>


    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Avatar</th>
                <th>Presentation</th>
                <th>Slug</th>
                <th>Créé le</th>
                <th>Mis à jour le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.avatar }}</td>
                <td>{{ entity.presentation }}</td>
                <td>{{ entity.slug }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="small-4">
                    <ul class="inline-list">
                        <li>
                            <a class="small button" href="{{ path('espace-personnel_edit', { 'id': entity.id }) }}">édition</a>
                        </li>
                        <li>
                            {{ form_start(deleteForms[entity.id]) }}
                            {{ form_widget(deleteForms[entity.id].submit, {'attr': {'class': 'small button'}, 'label': 'Supprimer'}) }}
                            {{ form_end(deleteForms[entity.id]) }}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
