{% extends 'bootstrap_4_layout.html.twig' %}

{% block form_row -%}
    {%- if compound is defined and compound -%}
        {%- set element = 'fieldset' -%}
    {%- endif -%}
    <{{ element|default('div') }} class="form-group{% if icon_class is defined %} has-feedback{% endif %}">
    {{- form_label(form) -}}
    {{- form_widget(form) -}}
    {% if icon_class is defined %}
        <i class="{{ icon_class|default('') }} form-control-feedback pr-4"></i>
    {% endif %}
    </{{ element|default('div') }}>
{%- endblock form_row %}

{% block password_row %}
    {% set icon_class= 'fa fa-lock' %}

    {{- block('form_row') -}}
{% endblock %}

{% block email_row %}
    {% set icon_class= 'fa fa-envelope' %}

    {{- block('form_row') -}}
{% endblock %}

{% block textarea_row %}
