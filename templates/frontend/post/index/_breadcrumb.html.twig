<div class="breadcrumb-container">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home pr-2"></i><a class="link-dark" href="{{ path('app_homepage') }}">{{ 'sylius.ui.home'|trans }}</a></li>
            <li class="breadcrumb-item"><a class="link-dark" href="{{ path('app_frontend_topic_index') }}">{{ 'app.ui.forum'|trans }}</a></li>
            {% if topic.mainTaxon is not null %}
                <li class="breadcrumb-item"><a class="link-dark" href="{{ path('app_frontend_topic_index_by_taxon', { 'slug': topic.mainTaxon.slug } ) }}">{{ topic.mainTaxon }}</a></li>
            {% endif %}
            <li class="breadcrumb-item active">{{ topic.title }}</li>
        </ol>
    </div>
</div>
<!-- breadcrumb end -->
