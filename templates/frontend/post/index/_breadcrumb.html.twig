<!-- ================ -->
<div class="breadcrumb-container">
    <div class="container">
        <ol class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
            <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <i class="fa fa-home pr-2"></i>
                <a class="link-dark" href="{{ path('app_homepage') }}">
                    <span itemprop="name">{{ 'sylius.ui.home'|trans }}</span>
                    <meta itemprop="position" content="1">
                </a>
            </li>
            <li class="breadcrumb-item"><a class="link-dark" href="{{ path('app_frontend_topic_index') }}">{{ 'app.ui.forum'|trans }}</a></li>
            {% if topic.mainTaxon is not null %}
                <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <a class="link-dark" href="{{ path('app_frontend_topic_index_by_taxon', { 'slug': topic.mainTaxon.slug } ) }}">
                        <span itemprop="name">{{ topic.mainTaxon }}</span>
                        <meta itemprop="position" content="2">
                    </a>
                </li>
            {% endif %}
            <li class="breadcrumb-item active" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                <span itemprop="name">{{ topic.title }}</span>
                <meta itemprop="position" content="{{ topic.mainTaxon is not null ? 3 : 2 }}">
            </li>
        </ol>
    </div>
</div>
<!-- breadcrumb end -->
